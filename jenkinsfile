def COLOR_MAP = [
    'SUCCESS': 'good',
    'FAILURE': 'danger'
]
pipeline {
    agent any
    stages {
        stage ("scm") {
            steps {
                git branch: 'branch3', url: 'https://github.com/Dimple-sasi-12/python-app.git'
            }
        }
        stage ("build") {
            steps {
                sh 'mvn clean install'
            }
        }
        stage ("deploy") {
            steps {
                echo "Successfully executed"
            }
        }
        stage ("remove images and containers") {
            steps {
                sh 'docker stop $(docker ps -q) || true'  
                sh 'docker rm $(docker ps -aq) || true'   
                sh 'docker rmi $(docker images -q) || true' 
            }
        }
        stage ("create images") {
            steps {
                sh 'docker build -t bunny2003/python-img .'
            }
        }
        stage ("create docker-container") {
            steps {
                sh 'docker run -itd -p 8082:5000 bunny2003/python-img'
                echo "Image and container are created"
            }
        }
    }
    post {
        always {
            echo 'Slack Notification.'
            slackSend channel: '#dev-team',
                      color: COLOR_MAP[currentBuild.currentResult],
                      message: "*${currentBuild.currentResult}:* Job ${env.JOB_NAME} build ${env.BUILD_NUMBER} \n More info at: ${env.BUILD_URL}"

            script {
                emailext(
                    subject: "Jenkins Build Notification - ${currentBuild.fullDisplayName}",
                    body: """
                        <h2>Build Notification</h2>
                        <p>Project: ${JOB_NAME}</p>
                        <p>Build Number: ${BUILD_NUMBER}</p>
                        <p>Status: ${currentBuild.currentResult}</p>
                        <p>View build: <a href="${BUILD_URL}">${BUILD_URL}</a></p>
                    """,
                    to: 'munirathnamdimple@gmail.com',
                    from: 'jenkins@gmail.com',
                    replyTo: 'jenkins@gmail.com',
                    mimeType: 'text/html'
                )
            }
        }
    }
}
