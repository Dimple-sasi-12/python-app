pipeline {
    agent any
    stages {
        stage ("scm") {
            steps {
                git branch: 'branch1', url: 'https://github.com/Dimple-sasi-12/python-app.git'
            }
        }
        stage ("build") {
            steps {
                sh 'mvn clean install'
            }
        }
        stage ("deploy") {
            steps {
                echo "Successfully executed"
            }
        }
        stage ("remove images and containers") {
            steps {
                sh 'docker stop $(docker ps -q) || true'  // Stop all running containers (if any)
                sh 'docker rm $(docker ps -aq) || true'   // Remove all containers (if any)
                sh 'docker rmi $(docker images -q) || true' // Remove all images (if any)
            }
        }
        stage ("create images") {
            steps {
                sh 'docker build -t bunny2003/python-img .'
            }
        }
        stage ("create docker-container") {
            steps {
                sh 'docker run -itd -p 8082:5000 bunny2003/python-img'
                echo "Image and container are created"
            }
        }
    }
}
