pipeline {
    agent any
    stages {
        stage ("scm") {
            steps {
                git branch: 'branch1', url: 'https://github.com/Dimple-sasi-12/python-app.git'
            }
        }
        stage ("build") {
            steps {
                sh 'mvn clean install'
            }
        }
        stage ("deploy") {
            steps {
                echo "sucessfully executed"
            }
        }
        stage ("create docker-image") {
            steps {
                withDockerRegistry(credentialsId: 'dockerhub-credentials', url: 'https://hub.docker.com/') {
                    sh 'docker build -t bunny2003/python-img'
                }
            }
        }
        stage ("push image to dockerhub") {
            steps {
                sh 'docker push bunny2003/python-img'
            }
        }
        stage ("create docker-container") {
            steps {
                sh 'docker run -itd -p 8082:5000 bunny2003/python-img'
                echo "image and container is created"
            }
        }
    }
}